{
   "moduleFileExtensions": ["js", "json", "ts"],
   "rootDir": ".",
   "testEnvironment": "node",
   "testRegex": ".e2e-spec.ts$",
   "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
   },
   "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
   },
   "globalSetup": "./setup.ts",
   "globalTeardown": "./teardown.ts",
   "openHandlesTimeout": 10000
}
